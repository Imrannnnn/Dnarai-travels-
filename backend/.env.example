# Server
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/skylink

# JWT
JWT_SECRET=replace_me_with_a_long_random_secret
JWT_EXPIRES_IN=7d

# Encryption (32 bytes base64 for AES-256-GCM key)
DOC_ENCRYPTION_KEY_BASE64=replace_me_base64_32bytes

# Weather
WEATHER_API_KEY=replace_me
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# Demo mode: allow unauthenticated read endpoints that match the frontend (GET /passenger, /flights, /notifications)
PUBLIC_DEMO=true
